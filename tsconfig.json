{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noLib": false,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "out": "./dist",
  "include": ["src/**/*"]
}
