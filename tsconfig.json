{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "removeComments": true,
    "noLib": false,
    "jsx": "react"
  },
  "out": "./dist",
  "types": [
    "mocha",
    "expect.js"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}