{
  "name": "azimut",
  "version": "1.0.0",
  "description": "a turn-based survival game",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.bundle.js",
    "start-server": "ts-node ./src/server/index.ts",
    "serve": "npm run build-server &&  npm run start ",
    "postinstall": "npm run build",
    "heroku-postbuild": "npm run build",
    "gen-client": "swagger-codegen generate -i ./src/api.yaml -l typescript-fetch",
    "gen-server": "swagger-codegen generate -i ./src/api.yaml -l typescript-fetch",
    "build": "npm run build-client && npm run build-server",
    "build-client": "webpack --mode=production --define process.env.NODE_ENV=production --progress --colors",
    "build-server": "webpack --mode=production --config webpack.config.server.js --progress --colors",
    "build-test": "tsc test/index.ts --outDir dist/test --module comnvm use 9.11monjs",
    "watch-client": "webpack --mode=development --watch --progress",
    "watch-server": "nodemon -e ts -w ./src/server/ -x npm run start-server",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "npm run test-client && npm run test-server",
    "test-client": "jest",
    "test-engine": "jest ./src/engine/*",
    "test-server": "mocha --reporter spec --require ./test/utils/node.ts --compilers ts:ts-node/register"
  },
  "author": "Benjamin Legrand",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerzual/azimut.git"
  },
  "license": "CC-BY-NC-4.0",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/jsdom": "^11.0.4",
    "@types/mongodb": "^3.0.18",
    "@types/node": "^9.6.12",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.19",
    "@types/socket.io": "^1.4.33",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "browser-sync": "^2.24.4",
    "enzyme": "^3.3.0",
    "fuse-box": "^3.7.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "node-sass": "^4.9.0",
    "pug": "^2.0.3",
    "rot-js": "^0.6.5",
    "supertest": "^3.0.0",
    "terser": "^3.16.1",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.2",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.3.3333",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "babylonjs": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "chance": "^1.0.16",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.3",
    "fast-simplex-noise": "^3.2.0",
    "gsap": "^1.20.2",
    "immutable": "^3.8.2",
    "lodash": "^4.17.10",
    "method-override": "^2.3.10",
    "moment": "^2.22.1",
    "mongodb": "^3.0.7",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-babylonjs": "^0.2.1",
    "react-dat-gui": "^1.0.2",
    "react-dom": "^16.3.2",
    "react-moment": "^0.6.3",
    "react-redux": "^5.0.6",
    "react-router": "^4.1.2",
    "rebass": "^1.0.3",
    "redux": "^3.7.2",
    "redux-devtools": "^3.4.0",
    "redux-observable": "^1.0.0",
    "redux-socket.io": "^1.4.0",
    "redux-thunk": "^2.2.0",
    "rxjs": "^6.2.2",
    "rxjs-compat": "^6.2.2",
    "serve-favicon": "^2.4.3",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "source-map-support": "^0.4.15",
    "sticky-session": "^1.1.2",
    "tone": "^0.12.8",
    "uuid": "^3.2.1",
    "whatwg-fetch": "^2.0.4",
    "winston": "^2.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "testEnvironment": "node"
  }
}
