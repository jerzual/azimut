{
  "name": "azimut",
  "version": "1.0.0",
  "description": "a turn-based survival game",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.bundle.js",
    "start-db": "mongod",
    "start-server": "ts-node --inspect ./src/server/index.ts",
    "serve": "npm run build-server &&  npm run start ",
    "heroku-postbuild": "npm run build",
    "build": "npm run build-client && npm run build-server",
    "build-client": "webpack --define process.env.NODE_ENV=production --progress --colors",
    "build-server": "webpack --config webpack.server.config.js --progress --colors",
    "build-test": "tsc test/index.ts --outDir dist/test --module commonjs",
    "watch": "webpack --watch --progress",
    "watch-server": "nodemon  -e ts -w ./src/server/ -x npm run start-server",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "npm run test-client && npm run test-server",
    "test-client": "jest",
    "test-engine": "jest ./src/engine/*",
    "test-server": "mocha --reporter spec --require ./test/utils/node.ts --compilers ts:ts-node/register"
  },
  "author": "Benjamin Legrand",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerzual/azimut.git"
  },
  "license": "CC-BY-NC-4.0",
  "devDependencies": {
    "@types/chai": "^4.0.3",
